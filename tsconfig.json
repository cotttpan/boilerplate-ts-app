{
    "compilerOptions": {
        "jsx": "react",
        "jsxFactory": "h",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "lib": [
            "dom",
            "es2016"
        ],
        "outDir": ".compiled",
        "baseUrl": ".",
        "allowJs": true,
        "checkJs": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "skipDefaultLibCheck": true,
        "pretty": true,
        "types": [
            "node"
        ],
        "paths": {
            "@shared": [
                "types/shared.ts"
            ]
        }
    },
    "include": [
        "types/**/*.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true
    }
}